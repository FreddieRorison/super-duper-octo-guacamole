head
  title Medical App
  style
    include ../stylesheets/styles.css
  meta(charset='utf-8')
.topbar
  img#logo(src='/images/patientMonitoringlogo.jpg')
.sidebar
  ul
    li
      a(href='/') Home
    if (admin == 1)
      li
        a(href='/AdminPanel') Admin Panel
#homepage.contentContainer
  #MenuContainer
    h1 Sensory Data Menu
    .HealthActivitiesMenuOption
      a(href='/Activities/' + SectionID + '/SensoryData/HealthData') Health Data
    .HealthActivitiesMenuOption
      a(href='/Activities/' + SectionID + '/SensoryData/ExerciseData') Exercise Data
    .HealthActivitiesMenuOption
      a(href='/Activities/' + SectionID + '/SensoryData/Reminders') Reminders
  #ReminderContainer 
    h1 Reminders
    h2 Today
    table 
      each reminder in RemindersToday
        tr
          td #{reminder.Name}