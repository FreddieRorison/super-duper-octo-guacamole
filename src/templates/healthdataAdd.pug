head
  title Medical App
  style 
    include ../stylesheets/styles.css
  meta(charset='utf-8')
.topbar
  img#logo(src='/images/patientMonitoringlogo.jpg')
.sidebar
  ul
    li
      a(href='/') Home
    li
      a(href='') Settings
#activityAdd.contentContainer
  h1 Health Data
  h2 Add Record
  form(method='POST')
    input(type='text' placeholder='Body Temperature' name='BodyTemp' pattern="^[0-9]+$")
    input(type='text' placeholder='Pulse Rate' name='PulseRate' pattern="^[0-9]+$")
    input(type='text' placeholder='Blood Pressure' name='BloodPressure' pattern="^[0-9]+$")
    input(type='text' placeholder='Resperation Rate' name='ResperationRate' pattern="^[0-9]+$")
    input(type='text' placeholder='ECG' name='ECG' pattern="^[0-9]+$")
    button(type='submit') Submit